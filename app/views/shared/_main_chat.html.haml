.chat-main
  .chat-main__group-info
    .chat-main__group-info__box
      .chat-main__group-info__box__group
        = @group.name
        %p.chat-main__group-info__box__group-member
          Member :
          - @group.group_users.each do |group_user|
            = group_user.user.name
    = link_to edit_group_path(@group), class:"chat-main__group-info__edit-btn" do
      Edit

  .chat-main__message-list
    = render @messages
    
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .chat-main__message-form__new__box
        = f.text_field :content, class: 'input-box__text', placeholder: 'Type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('far', 'image', class: 'icon')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'input-box__submit'